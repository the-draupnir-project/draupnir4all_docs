# See https://editorconfig.org for more information
root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2

[{LICENSE,*.{md,yml,yaml,json}}]
trim_trailing_whitespace = false
indent_style = space
indent_size = unset

[*.go]
indent_style = tab